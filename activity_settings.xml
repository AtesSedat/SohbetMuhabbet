<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">


    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/ic_email"
            android:id="@+id/imageView2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarPhoto" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_action_phone_start"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:id="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/ic_person_pin"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imgGaleri"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_user_name2"
            app:layout_constraintStart_toEndOf="@+id/imageView4" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imgGaleri"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_user_email2" app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_user_phone2" app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_email2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginTop="16dp" android:text="textview" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_user_photo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"  app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_account_circle"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>


    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/ic_menu_gallery"
            android:id="@+id/imgGaleri"
            app:layout_constraintStart_toStartOf="@+id/img_user_photo" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/img_user_photo" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/ic_menu_camera"
            android:id="@+id/imgCamera"
            app:layout_constraintEnd_toEndOf="@+id/img_user_photo"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/img_user_photo"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="Hesabı Sil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnDelete"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="56dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/btnSaveChanges"/>
    <Button
            android:text="Değişiklikleri Kaydet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSaveChanges" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="56dp"
            android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/tv_user_phone2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
</android.support.constraint.ConstraintLayout>